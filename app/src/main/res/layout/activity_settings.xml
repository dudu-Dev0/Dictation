<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:style="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="160dp"
	android:layout_height="180dp"
	android:background="#FF000000">

	<TextView
		android:id="@+id/title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="设置"
		android:textColor="#2196F3"
		android:textSize="20dp" />

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="60dp"
				android:layout_margin="2dp"
				android:layout_weight="1"
				android:background="@drawable/button_grey"
				android:orientation="horizontal">

				<TextView
					android:layout_width="90dp"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:layout_margin="5dp"
					android:layout_weight="1"
					android:gravity="left|center"
					android:text="不保留历史"
					android:textSize="17dp"
					android:textColor="#FFFFFFFF" />

				<!-- switchMinWidth的值和my_switch_track_off.xml及my_switch_track_off.xml中宽度一致 -->

				<com.suke.widget.SwitchButton
					android:id="@+id/autoDel"
					android:layout_gravity="center"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>

			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="60dp"
				android:layout_margin="2dp"
				android:layout_weight="1"
				android:background="@drawable/button_grey"
				android:orientation="horizontal">

				<TextView
					android:layout_width="90dp"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:layout_margin="5dp"
					android:layout_weight="1"
					android:gravity="left|center"
					android:text="乱序播放"
					android:textSize="17dp"
					android:textColor="#FFFFFFFF" />

				<!-- switchMinWidth的值和my_switch_track_off.xml及my_switch_track_off.xml中宽度一致 -->

				<com.suke.widget.SwitchButton
					android:id="@+id/scrambleTheOrder"
					android:layout_gravity="center"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>

			</LinearLayout>
			<LinearLayout
				android:id="@+id/toSetLoopTimes"
				android:layout_width="wrap_content"
				android:layout_height="60dp"
				android:layout_margin="2dp"
				android:layout_weight="1"
				android:background="@drawable/button_grey"
				android:orientation="horizontal">

				<TextView
					android:layout_width="150dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:layout_gravity="center"
					android:layout_margin="5dp"
					android:gravity="left|center"
					android:text="循环次数"
					android:textSize="17dp"
					android:textColor="#FFFFFFFF" />

				<ImageView
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:layout_gravity="center"
					android:src="@drawable/get_into" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/toSetBroadcastInterval"
				android:layout_width="wrap_content"
				android:layout_height="60dp"
				android:layout_margin="2dp"
				android:layout_weight="1"
				android:background="@drawable/button_grey"
				android:orientation="horizontal">

				<TextView
					android:layout_width="150dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:layout_gravity="center"
					android:layout_margin="5dp"
					android:gravity="left|center"
					android:text="播报间隔(ms)"
					android:textSize="17dp"
					android:textColor="#FFFFFFFF" />

				<ImageView
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:layout_gravity="center"
					android:src="@drawable/get_into" />
			</LinearLayout>
			<Button
				android:layout_width="146dp"
				android:layout_height="40dp"
				android:text="分享"
				android:background="@drawable/button_circle_blue"
				android:id="@+id/btshare"
				android:layout_margin="5dp"
				android:visibility="gone"/>

		</LinearLayout>

	</ScrollView>

</LinearLayout>

