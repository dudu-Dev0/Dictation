<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="录入单词"
        android:textColor="#2196F3"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/numberTextOfWords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center"
        android:text="单词%n"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/wordsText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edit_text_shape"
        android:hint="单词"
        android:textColor="#000000"
        android:textColorHint="#373737"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/inputNextWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/button_left_grey"
            android:text="下一个" />

        <Button
            android:id="@+id/finishInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/button_right_blue"
            android:text="去听写" />
    </LinearLayout>

</LinearLayout>